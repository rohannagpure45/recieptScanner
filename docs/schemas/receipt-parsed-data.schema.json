{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://receipt-splitter.dev/schemas/receipt-parsed-data.schema.json",
  "title": "ReceiptParsedData",
  "type": "object",
  "required": [
    "receipt_id",
    "merchant",
    "transaction_date",
    "line_items",
    "subtotal_cents",
    "tax_cents",
    "tip_cents",
    "total_cents"
  ],
  "properties": {
    "receipt_id": { "type": "string", "format": "uuid" },
    "merchant": { "type": "string", "minLength": 1 },
    "transaction_date": { "type": "string", "format": "date" },
    "currency": { "type": "string", "pattern": "^[A-Z]{3}$", "default": "USD" },
    "line_items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "quantity", "unit_price_cents", "total_cents"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "minLength": 1 },
          "quantity": { "type": "integer", "minimum": 1 },
          "unit_price_cents": { "type": "integer", "minimum": 0 },
          "total_cents": { "type": "integer", "minimum": 0 },
          "category": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    },
    "subtotal_cents": { "type": "integer", "minimum": 0 },
    "tax_cents": { "type": "integer", "minimum": 0 },
    "tip_cents": { "type": "integer", "minimum": 0 },
    "total_cents": { "type": "integer", "minimum": 0 },
    "error": { "type": "string" }
  }
}
